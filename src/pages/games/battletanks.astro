---
import fs from 'node:fs';
import path from 'node:path';

const htmlPath = path.resolve(process.cwd(), 'public/games/battletanks/index.html');
const rawHtml = fs.readFileSync(htmlPath, 'utf-8');
const config = {
  firebaseApiKey: import.meta.env.PUBLIC_FIREBASE_API_KEY || process.env.PUBLIC_FIREBASE_API_KEY || '',
  env: import.meta.env.DEV ? 'dev' : 'prod'
};
const injectedHtml = rawHtml.replace(
  /<script id="battletanks-config" type="application\/json">[\s\S]*?<\/script>/,
  `<script id="battletanks-config" type="application/json">${JSON.stringify(config)}</script>`
);
---
<Fragment set:html={injectedHtml} />
